<style>
  .section_connection {
    padding-right: 60px;
    padding-left: 60px;
    background: var(--section2);
  }

  .grid-container {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    grid-template-rows: repeat(4, 1fr);
    /* column-gap: 200px;
    row-gap: 100px; */
    padding: 40px;
    justify-items: center;
    /* background: tbd */
  }

  .box {
    padding: 20px;
    background: var(--tertiary);
    border-radius: 53px;
    text-align: center;
    text-wrap: balance;
    /* height: 300px; */
    place-content: center;
  }

  .produktion {
    grid-column: 1 / span 3;
    grid-row: 1;
    text-align: start;
    align-content: start;
  }
  .arrow_right {
    grid-column: 4;
    grid-row: 1;
    width: 5vw;
    margin: 30px;
  }
  .salg {
    grid-column: 5 / span 2;
    grid-row: 1 / span 2;
    align-content: start;
  }
  .arrow_down {
    grid-column: 5 / span 2;
    grid-row: 3;
    height: 5vw;
    margin: 30px;
  }

  .materialer {
    grid-column: 4 / span 3;
    grid-row: 4;
    text-align: start;
    align-content: start;
  }
  .arrow_left {
    grid-column: 3;
    grid-row: 4;
    width: 5vw;
    margin: 30px;
  }

  .forbrug {
    grid-column: 1 / span 2;
    grid-row: 3 / span 2;
    align-content: start;
  }

  .arrow_up {
    grid-column: 1 / span 2;
    grid-row: 2;
    height: 5vw;
    margin: 30px;
  }

  .center {
    grid-column: 3 / span 2;
    grid-row: 2 / span 2;
    align-self: center;
    background: #3c8e76;
    padding: 80px 20px;
    border-radius: 50%;
    align-content: center;
    text-align: center;
  }

  .center h4,
  h5 {
    color: var(--txtcolor2);
  }
</style>
