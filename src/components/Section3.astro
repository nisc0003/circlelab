    overflow-x: auto;
    gap: 1rem;
  }

  .event_card {
    flex: 0 0 auto;
  }

  .card_img_box {
    display: grid;
    grid-template-columns: subgrid;
    grid-template-rows: 1fr;
  }

  .card_img_box img {
    border-radius: 100%;
    border-bottom-left-radius: 0%;
    grid-row: 1;
    z-index: 2;
    border: solid 8px var(--primary);
  }
  .cards_layout {
    overflow-x: hidden;
  }
</style>
