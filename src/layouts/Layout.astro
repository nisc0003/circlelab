---
import "../css/general.css";
import "../css/card.css";
import header from "../images/header.png";
import footer from "../images/footer.png";
const { titel } = Astro.props;
---

<!doctype html>
<html lang="da">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{titel}</title>
    <!-- <meta name="--navn--" content="--Beskrivende tekst--" /> -->
    <!-- <link rel="icon" href="--billede--" type="image/x-icon" /> -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />
    <script is:inline>
      window.addEventListener("load", () => {
        const carousel = document.querySelector(".cards_layout");
        const card = document.querySelector(".event_card");
        const nextbtn = document.querySelector(".right_arrow");
        const prevbtn = document.querySelector(".left_arrow");

        if (!carousel || !card || !nextbtn || !prevbtn) return;

        const slideWidth = card.clientWidth;

        nextbtn.addEventListener("click", () => {
          carousel.scrollLeft += slideWidth;
        });

        prevbtn.addEventListener("click", () => {
          carousel.scrollLeft -= slideWidth;
        });
      });
    </script></head
  >

  <body>
    <header>
      <img src={header.src} alt="header" />
    </header>
    <main>
      <slot />
    </main>
    <footer>
      <img src={footer.src} alt="footer" />
    </footer>
  </body>
</html>

